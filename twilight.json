/* إعدادات عامة */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f4f4f4;
    color: #333;
    line-height: 1.6;
}
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* رأس الموقع */
header {
    background-color: #343a40;
    color: white;
    padding: 15px 0;
    text-align: center;
}
header h1 {
    font-size: 3em;
    margin: 0;
}

/* شريط التنقل */
nav {
    display: flex;
    justify-content: space-around;
    background-color: #495057;
    padding: 10px;
}
nav a {
    color: white;
    text-decoration: none;
    font-size: 1.2em;
    padding: 10px;
}
nav a:hover {
    background-color: #6c757d;
    transition: background-color 0.3s;
}

/* شريط البحث */
.search-bar {
    display: flex;
    justify-content: center;
    margin: 20px 0;
}
.search-bar input[type="text"] {
    width: 60%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1.1em;
}
.search-bar button {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
.search-bar button:hover {
    background-color: #0056b3;
}

/* أقسام المنتجات */
.products {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}
.product {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s;
}
.product img {
    width: 100%;
    border-bottom: 1px solid #ddd;
    padding-bottom: 15px;
}
.product h3 {
    font-size: 1.8em;
    margin: 20px 0 10px;
}
.product p {
    font-size: 1em;
    color: #777;
    margin-bottom: 15px;
}
.product .price {
    font-size: 1.5em;
    color: #28a745;
    margin-bottom: 15px;
}
.product .discount {
    text-decoration: line-through;
    color: #999;
    font-size: 1.2em;
}
.product button {
    background-color: #ffc107;
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 1.1em;
    cursor: pointer;
    border-radius: 5px;
    margin-top: 15px;
    transition: background-color 0.3s;
}
.product button:hover {
    background-color: #e0a800;
}
.product:hover {
    transform: translateY(-10px);
}

/* قسم العروض */
.offers {
    background-color: #f8d7da;
    padding: 30px;
    border-radius: 10px;
    margin-bottom: 40px;
    text-align: center;
}
.offers h2 {
    color: #721c24;
    font-size: 2.5em;
    margin-bottom: 20px;
}
.offers p {
    font-size: 1.2em;
    margin-bottom: 20px;
}
.offers a {
    background-color: #f5c6cb;
    color: #721c24;
    padding: 10px 20px;
    text-decoration: none;
    font-size: 1.2em;
    border-radius: 5px;
    transition: background-color 0.3s;
}
.offers a:hover {
    background-color: #f1b0b7;
}

/* الفوتر */
footer {
    background-color: #343a40;
    color: white;
    text-align: center;
    padding: 30px 0;
}
footer p {
    font-size: 1.1em;
    margin: 0;
}

/* الوسائط المتجاوبة */
@media (max-width: 768px) {
    nav {
        flex-direction: column;
    }
    .search-bar input[type="text"] {
        width: 80%;
    }
}
